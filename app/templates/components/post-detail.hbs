<div class="well">
  <div class="row">
    <div class="col-md-7 image-tile">
      <img class="img-responsive" src="{{post.imageFeature}}" alt="{{post.title}}" />
    </div>
    <div class="col-md-5 content-tile">
      <h2>{{post.title}}</h2>
      <h4>{{post.author}}, <small>{{moment-from-now post.timestamp}}</small>.</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 post-content">
      <p>
        {{post.teaser}}
      </p>
      <p>
        {{post.content}}
      </p>
      <p>
        <img class="img-responsive image-content" src="{{post.imageContent}}" alt="{{post.title}}" />
      </p>
    </div>

  </div>
</div>
