<div class="well">
  <div class="row">
    <div class="col-md-12">
      <h3>{{post.title}}</h3>
      <h4>{{post.author}}, <small>{{moment-from-now post.timestamp}}</small>.</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <button {{action 'updatePostForm' post}} class="btn btn-info btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
      <button {{action 'delete' post}} class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

    </div>
  </div>
</div>
