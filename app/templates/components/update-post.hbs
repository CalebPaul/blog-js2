{{#if updatePostForm}}
<div class="well">

  <h2 class="text-center"><em>Update Post</em></h2>

  <form class="form-horizontal">
    <div class="form-group">
      <label for="title" class="col-sm-2 control-label">Title:</label>
      <div class="col-sm-10">
        {{input class="form-control" value=post.title id="update_title"}}
        </div>
    </div>

    <div class="form-group">
      <label for="imageFeature" class="col-sm-2 control-label">Feature Image:</label>
      <div class="col-sm-10">
        {{input class="form-control" value=post.imageFeature id="update_imageFeature" }}
      </div>
    </div>

    <div class="form-group">
      <label for="imageContent" class="col-sm-2 control-label">Body Image:</label>
      <div class="col-sm-10">
      {{input class="form-control" value=post.imageContent id="update_imageContent"}}
      </div>
    </div>

    <div class="form-group">
      <label for="teaser" class="col-sm-2 control-label">Teaser Text:</label>
      <div class="col-sm-10">
          {{textarea value=teaser id="update_teaser" value=post.teaser rows=3 class="form-control"}}
      </div>
    </div>

    <div class="form-group">
      <label for="content" class="col-sm-2 control-label">Content Text:</label>
      <div class="col-sm-10">
        {{textarea rows=10 class="form-control" value=post.content id="update_content"}}
      </div>
    </div>

    <!-- <div class="form-group">
      <label for="timestamp" class="col-sm-2 control-label">Date:</label>
      <div class="col-sm-10">
        {{input class="form-control" value=post.timestamp type="date" id="update_timestamp"}}
      </div>
    </div> -->

    <div class="form-group">
      <label for="author" class="col-sm-2 control-label">Author:</label>
      <div class="col-sm-10">
        {{input class="form-control" value=post.author id="update_author"}}
      </div>
    </div>

    <button class="btn btn-success center-block" {{action 'updatePost' post}}>Update</button>
  </form>
</div>
<!-- {{else}}
<button {{action 'updatePostForm'}} class="btn btn-info btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button> -->
{{/if}}
